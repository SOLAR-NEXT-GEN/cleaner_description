<?xml version="1.0"?>
<robot name="cleaner_xacro" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <link name="base_footprint"/>

    <!-- Base link -->
    <link name="base_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <mesh filename="file://$(find cleaner_description)/meshes/CleanerFP.dae" scale="1 1 1"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <mesh filename="file://$(find cleaner_description)/meshes/CleanerFP.dae" scale="1 1 1"/>
            </geometry>
        </collision>
        
    </link>

    <link name="wheel_right_link">
        <visual>
            <origin xyz="0 0 0" rpy="1.57 0 0" />
            <geometry>
                <cylinder length="0.08" radius="0.167525"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="1.57 0 0" />
            <geometry>
                <cylinder length="0.08" radius="0.167525"/>
            </geometry>
        </collision>
        
    </link>

    <link name="wheel_left_link">
        <visual>
            <origin xyz="0 0 0" rpy="1.57 0 0" />
            <geometry>
                <cylinder length="0.08" radius="0.167525"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="1.57 0 0" />
            <geometry>
                <cylinder length="0.08" radius="0.167525"/>
            </geometry>
        </collision>
        
    </link>

<!--Joints-->

    <joint name="base_footprint_to_base_link_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
    </joint>

    <joint name="base_link_to_wheel_right_joint" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_right_link"/>
        <origin xyz="0.0 -0.8 0.167525" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <joint name="base_link_to_wheel_left_joint" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_left_link"/>
        <origin xyz="0.0 0.8 0.167525" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>
    
</robot>